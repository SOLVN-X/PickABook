@{
    ViewData["Title"] = "Admin Dashboard";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />


<div class="container" style="background-image: url(' /signupbackground.jpg') ;background-size: 100% 100%;  background-repeat: no-repeat;background-attachment: fixed;">
    <h1 class="text-center">Admin Dashboard</h1>

    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card" style="margin-bottom: 50px;">
                <div class="card-body">
                    <div class="d-flex flex-row widget summary books">
                        <div class="d-flex flex-column justify-content-center p-5">
                            <i class="fa-solid fa-book fa-2xl" style="color: deepskyblue;"></i>
                        </div>
                        <div class="d-flex flex-column m-auto py-3 p-5">
                            <span class="Lead">Total Books</span>
                            <h1 class="display-9 fw-bold">@ViewBag.TotalBooks</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card" style="margin-bottom: 50px;">
                <div class="card-body">
                    <div class="d-flex flex-row widget summary books">
                        <div class="d-flex flex-column justify-content-center p-5">
                            <i class="fa-solid fa-users fa-2xl" style="color: green"></i>
                        </div>
                        <div class="d-flex flex-column m-auto py-3 p-5">
                            <span class="Lead">Total Users</span>
                            <h1 class="display-9 fw-bold">@ViewBag.TotalUsers</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
