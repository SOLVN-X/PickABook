@model PickABookWeb.Models.Book

@{
     // or Layout = "";
}


<style>
    body {
        background-image: url("/mainbackground.jpg");
        font-family: Arial, sans-serif;
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        overflow:scroll;
        position: relative;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5); /* Adjust the alpha value to control transparency */
    }

    #account {
        background-color: #d3d3d3;
        width: 500px;
        /* Limit the maximum width of the form */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    h2 {
        text-align: center;
        color: #333;
    }

    .form-floating {
        margin: 10px;
        position: relative; /* Add this property */
    }

        .form-floating input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            display: block; /* Center-align the text boxes */
            margin: auto; /* Center-align the text boxes */
        }

    .checkbox label {
        display: flex;
        align-items: center;
    }

    button {
        width: 100%;
        padding: 10px;
        background-color: darkred;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

        button:hover {
            background-color: darkred;
        }

    p {
        text-align: center;
    }

    a {
        color: darkred;
        text-decoration: none;
    }
    
    /* Create a separate div for the background image and apply a blur filter */



</style>
<body>

    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-4">
            <section id="account">
                <form id="account-form" method="post">
                    <h2>Fill in the Details of the Book</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" aria-required="true" />

                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <label asp-for="Author" class="form-label"></label>
                        <input asp-for="Author" class="form-control" aria-required="true" />

                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <label asp-for="ISBN" class="form-label"></label>
                        <input asp-for="ISBN" class="form-control" aria-required="true" />

                        <span asp-validation-for="ISBN" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <label asp-for="Publisher" class="form-label"></label>
                        <input asp-for="Publisher" class="form-control" aria-required="true" />

                        <span asp-validation-for="Publisher" class="text-danger"></span>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <div class="form-floating">
                                <label asp-for="Price" class="form-label"></label>
                                <input asp-for="Price" class="form-control" aria-required="true" />

                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating">
                                <label asp-for="Edition" class="form-label"></label>
                                <input asp-for="Edition" class="form-control" aria-required="true" />

                                <span asp-validation-for="Edition" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating">
                                <label asp-for="Year" class="form-label"></label>
                                <input asp-for="Year" type="date" class="form-control" aria-required="true" />

                                <span asp-validation-for="Year" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-floating">
                        <select asp-for="Condition" class="form-select form-control-lg" style="width:100%;height:4%" aria-required="true">
                            <option value="">Select Condition</option>
                            <option value="Excellent">Excellent</option>
                            <option value="Good">Good</option>
                            <option value="Fair">Fair</option>
                            <option value="Bad">Bad</option>
                        </select>

                        <span asp-validation-for="Condition" class="text-danger"></span>
                    </div>

                    <div class="form-floating">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" aria-required="false" />

                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <label asp-for="Image" class="form-label"></label>

                        <!-- Add an input element for choosing or capturing an image -->
                        <input asp-for="Image" type="file" class="form-control" accept="image/*" capture="environment" aria-required="true" />

                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>

                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Submit</button>
                    </div>

                </form>
            </section>
           
        </div>
    </div>



</body>